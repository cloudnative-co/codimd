        position: static;
        order: 3;
        width: 100%;
        height: auto;
        padding-top: 30px;
    }
    #tags_frame::-webkit-scrollbar {
        display: none;
    }
    #notes-list {
        width: 100%;
        padding-top: 60px;
    }
    .pagination {
        padding-right: 0;
    }
    .form-inline {
        position: absolute;
        right: 0;
        top: 15px;
        width: 100%;
    }
    .form-group {
        padding-left: 0;
    }
}
