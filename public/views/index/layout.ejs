body {
    height: 100vh;
    font-family: 'Noto Sans JP', sans-serif;
}
.site-wrapper {
    height: auto;
    box-shadow: none;
}
.site-wrapper-inner {
    vertical-align: top;
}
.btn-primary {
    background-color: #cc0000;
    border: 1px solid rgba(0,0,0,0.4);
}
.btn-primary:hover {
    background-color: rgba(0,0,0,0.4);
    border: 1px solid rgba(0,0,0,0.4);
}
.pagination .active a {
    background-color: #cc0000;
    border: 1px solid rgba(0,0,0,0.4);
}
