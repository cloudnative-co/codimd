    z-index: 10;
}
.masthead:after {
    position: absolute;
    left: 10px;
    top: 10px;
    display: block;
    content: "";
    width: 60px;
    height: 32px;
    background-image: url('https://cloudnative.co.jp/dist/img/logo_w_cloudnative.svg')
}
.masthead-nav {
    max-width: 100%;
    page-break-after: 0 10px;
    box-sizing: border-box;
}
.cover-container {
    width: 100%;
    box-sizing: border-box;
    padding: 60px 20px;
}
.masthead > .inner {
    padding: 0;
}
#notes {
    position: relative;
    display: flex;
    flex-wrap: wrap;
}
